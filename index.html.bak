    <!-- Admission Modal -->
    <div id="admissionModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4">
        <div class="bg-white rounded-lg max-w-2xl w-full relative">
            <button onclick="closeModal()" class="absolute right-2 top-2 text-gray-500 hover:text-gray-700">
                <i class='bx bx-x text-2xl'></i>
            </button>
            <div class="p-6">
                <div class="text-center mb-6">
